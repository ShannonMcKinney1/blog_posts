---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
const pageTitle = "Browse by Tag | Shannon's Journal Blog";

---
<BaseLayout pageTitle={pageTitle} description="Browse all topics covered on Shannon's Journal Blog, including bullet journaling, goal setting, career tips, and lifestyle.">
    <div class="tags"><u>
        {tags.map((tag) => (
          <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}</u>
      </div>
</BaseLayout>   